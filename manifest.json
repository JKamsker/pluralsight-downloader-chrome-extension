{
  "manifest_version": 2,
  "name": "Pluralsight Course Downloader",
  "description": "Easily download course video from pluralsight.",
  "version": "0.6",
  "author": "Vatsal Joshi",
  "homepage_url": "https://github.com/vatz88/Pluralsight-Course-Downloader",
  "content_scripts": [{
    "matches": ["https://app.pluralsight.com/*"],
    "js": ["jquery.slim.min.js", "script.js"],
    "run_at": "document_end"
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/extension_icon_16.png",
      "32": "images/extension_icon_32.png",
      "48": "images/extension_icon_48.png",
      "128": "images/extension_icon_128.png"
    }
  },
  "icons": {
    "16": "images/extension_icon_16.png",
    "32": "images/extension_icon_32.png",
    "48": "images/extension_icon_48.png",
    "128": "images/extension_icon_128.png"
  },
  "permissions": ["activeTab","declarativeContent", "storage",  "downloads", "notifications"]
}
